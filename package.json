{
  "name": "tmmethode-portfolio",
  "version": "1.0.0",
  "description": "TMMETHODE Portfolio - Cloud Engineer & Systems Administrator",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm start",
    "dev:server": "cd server && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "setup": "cd server && node setup.js"
  },
  "keywords": [
    "portfolio",
    "react",
    "express",
    "mongodb",
    "tmmethode",
    "cloud-engineer"
  ],
  "author": "TMMETHODE",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
} 